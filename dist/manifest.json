{
  "name": "BetterEverywhere",
  "short_name": "BEW",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Use the BetterTTV emotes everywhere",
  "homepage_url": "https://github.com/Braayy",
  "permissions": [
    "browsingData",
    "activeTab"
  ],
  "content_scripts": [
    {
      "js": [ "bettereverywhere.js" ],
      "matches": [
        "https://twitter.com/*",
        "http://twitter.com/*",
        "https://tweetdeck.twitter.com/*",
        "http://tweetdeck.twitter.com/*",
        "https://www.reddit.com/*",
        "http://www.reddit.com/*"
      ]
    }
  ]
}
